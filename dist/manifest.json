{
  "version": "1.0.0",
  "manifest_version": 3,
  "name": "NeOff",
  "description": "This is a Chrome extension built with React and Javascript",
  "action": {
    "default_popup": "./index.html",
    "default_title": "NeOff"
  },


  "icons": {
    "16": "./public/icon-16.png",
    "48": "./public/icon-48.png",
    "128": "./public/icon-128.png"
  },

  "permissions": [
    "bookmarks",
    "notifications",
    "tabs",
    "downloads",
    "activeTab"
  ],
  "background": {
    "service_worker": "./js/sendurl.js",
    "type": "module"
  }
}